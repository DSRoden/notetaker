h1 {{mode | uppercase}}

.row
  .small-12.columns
    form
      .row
        .small-6.columns
          label(for='username') Username
          input#username(type='text', name='username', ng-model='user.username', autofocus)
        .small-6.columns
      .row(ng-show='mode === "register"')
        .small-6.columns
          label(for='email') Email
          input#username(type='email', name='email', ng-model='user.email', placeholder="your email")
        .small-6.columns
      .row(ng-show='mode === "register"')
        .small-6.columns
          label(for='phone') Phone (optional)
          input#avatar(type='text', name='phone', ng-model='user.phone', placeholder="phone number")
        .small-6.columns
      .row
        .small-6.columns
          label(for='password') Password
          input#password(type='password', name='password', ng-model='user.password')
        .small-6.columns
      .row
        .small-6.columns
          button(ng-click='submit()') Submit
        .small-6.columns
